%nav.navbar{ class: "navbar is-light #{local_assigns[:fixed_top] && 'is-fixed-top'}", 'aria-label' => 'main navigation', role: 'navigation', data: local_assigns[:fixed_top] && { sticky: true, 'hide-on-scroll' => true } }
  .container
    .navbar-brand
      %a.navbar-item{ href: '/' }
        %img{ src: 'https://bulma.io/images/bulma-logo.png', height: 28, width: 112 }
      .navbar-burger.burger{ 'aria-expanded' => 'false', 'aria-label' => 'menu', 'data-target' => 'main-nav', role: 'button' }
        %span{ 'aria-hidden' => 'true' }
        %span{ 'aria-hidden' => 'true' }
        %span{ 'aria-hidden' => 'true' }

    #main-nav.navbar-menu
      .navbar-start
        %a.navbar-item{ href: '#' }
          %span.icon
            %i.far.fa-gem
          %span Home
        %a.navbar-item{ href: '#' }
          %span.icon
            %i.far.fa-star
          %span About

      - if local_assigns[:auth_links]
        .navbar-end
          - if session[:user_name]
            .navbar-item
              = 'Hi, ' + session[:user_name]
            = link_to 'Logout', user_logout_path, method: :delete, class: 'navbar-item'
          - else
            %a.navbar-item{ href: auth_login_path }
              Login
            %a.navbar-item{ href: auth_register_path }
              Register
