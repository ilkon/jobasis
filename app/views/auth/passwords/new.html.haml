.container.has-text-centered
  .columns.is-centered
    .column.is-two-thirds-tablet.is-half-desktop.is-one-third-widescreen
      %h3.title.has-text-grey Reset password

      = render 'layouts/notification'

      - if @success
        - content_for(:page_title) { 'Password link sent!' }
        .box
          %p.content.has-text-grey Check your email for a link to reset your password. If it doesn't appear within a few minutes, check your spam folder.
          %a.button.is-block.is-info.is-fullwidth{ href: new_user_session_path }
            Return to Login
      - else
        - content_for(:page_title) { 'Forgot your password?' }
        .box
          %p.content.has-text-grey Enter your email address and we will send you a link to reset your password.
          = form_tag user_password_path do
            .field
              .control.has-icons-left
                %input.input{ type: :email, name: :email, autofocus: true, placeholder: 'Email', value: @email }
                %span.icon.is-small.is-left
                  %i.fas.fa-envelope

            %button.button.is-block.is-info.is-fullwidth Send password reset link

      %p.has-text-grey
        %a{ href: new_user_session_path } Login
         · 
        %a{ href: new_user_registration_path } Register
